.menu
    ul.tracks
        - var trackIndex = 0
        each track in tracks
            li(class=track)
                h1= trackNames[trackIndex++]
                ul.choices
                    each episode in menu[track]
                        li.choice(data-enabled=episode.enabled)
                            - if (episode.enabled)
                                i.fa.fa-unlock-alt
                            - else
                                i.fa.fa-lock

                            button(name=episode.pkg.name)= episode.pkg.name
                            if episode.pkg.description
                                .description= " â€“ " + episode.pkg.description
                            ul.provides
                                each p in episode.pkg.brain.provides || []
                                    li= p
