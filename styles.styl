@import 'node_modules/css-colors-solarized/styles/colors-solarized'

body
    font: 13px/1.4 Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
    color: base02() 
    background-color: base3()

img
  border: 1px solid white
  width: 100%
  box-shadow: 1px 1px 8px rgba(0,0,0,0.3)

.horizontal_container
    display: flex
    flex-direction: row

.episode
    min-height 4em
    min-width 4em
    background-color base2() 
    line-height 1.5em
    font 13px/1.4em "Helvetica Neue", arial,freesans,clean,sans-serif;
    margin 2em 15em
    padding 2em

    .menu
        ul
            padding 0 0

        ul.tracks
            list-style none
            display flex
            
            &>li
                padding 2em
                h1
                    padding .2em
                    color base3()

                &.blue
                    h1
                        background-color: sblue() 
                &.yellow
                    h1
                        background-color: syellow() 
                &.black
                    h1
                        background-color: base03()
            ul.choices
                list-style none
                button
                    border none
                    background-color inherit
                    font-size inherit
                    &:hover
                        background-color sviolet(.5)

                li.choice // disabled
                    margin-bottom .4em
                    color: base00()
                    button
                        color inherit 
                        text-decoration: none
                    .description
                        display none
                        color base0()
                    ul.requires
                        color sred()
                        &::before
                            content "(requires knowledge you don't have yet: "
                        &::after
                            content ")"
                        display inline
                        li
                            display inline
                            &:not(:last-child)::after
                                content: ", "
                    ul.provides
                        display none

                li.choice[data-enabled]
                    color base03()
                    .description
                        display inline
                        color base01()
                    ul.requires
                        display: none
.sidebar
    position: fixed
    top: 4em
    width: 12em

.history   
    li
        list-style: none
        cursor: pointer
        &:hover
            background-color: #a0a0e0

.topbar
    color: #403030
    opacity: 0.8
    background-color: #e0e0e0
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 1em
    padding: 5px
    box-shadow: 2px 0px 4px rgba(0,0,0,0.5)

    span
        margin: 0em .2em 

.content
    margin-top: 3em

.button
    background-color: #697EBA
    display: inline-block
    padding: .5em
    margin-top: .5em
    color: #eeeeee
    cursor: pointer
