body
    font: 13px/1.4 Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"


img
  border: 1px solid white
  width: 100%
  box-shadow: 1px 1px 8px rgba(0,0,0,0.3)

.horizontal_container
    display: flex
    flex-direction: row

.episode
    background-color: #f9f9f9
    color: #393939
    line-height: 1.5em
    font: 13px/1.4em "Helvetica Neue", arial,freesans,clean,sans-serif;
    margin: 2em 15em
    padding: 2em
.sidebar
    width: 50em

.history
    position: fixed
    top: 4em
    
    li
        list-style: none
        cursor: pointer
        &:hover
            background-color: #a0a0e0

.topbar
    color: #403030
    opacity: 0.8
    background-color: #e0e0e0
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 1em
    padding: 5px
    box-shadow: 2px 0px 4px rgba(0,0,0,0.5)

    span
        margin: 0em .2em 

.content
    margin-top: 3em
