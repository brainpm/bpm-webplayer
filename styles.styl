img
  border: 1px solid white
  width: 100%
  box-shadow: 1px 1px 8px rgba(0,0,0,0.3)

.horizontal_container
    display: flex
    flex-direction: row

.sidebar
    width: 60em

.history
    position: fixed
    top: 4em

.track_viewport
    width: 100%
    overflow: scroll

.track_container
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: flex-start
    width: 2400px

.track
    min-height: 200px
    width: 30%
    padding: 2em
 
.track
    &.blue
        background-color: blue

    &.yellow
        background-color: yellow

    &.black
        background-color: #dddddd
