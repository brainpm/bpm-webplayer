SIDEBAR_WIDTH=18em

.horizontal_container
    display: flex
    flex-direction: row

.episode
    min-height 4em
    min-width 20em
    max-width: 50em
    margin-left SIDEBAR_WIDTH + 3em
    margin-top 2em
    margin-bottom 2em
    padding 2em
    padding-top 0em

    .header, .footer
        span:not(:last-child)::after
            content: ', '
    .header
        display inline
        margin-left 2em
        position relative

    .footer
        margin-bottom 1em

    .body .video
        background-color lightgray
        padding .1em

    .body .video .credits
        display flex
        flex-wrap wrap
        font-size: 75%
        span
            margin-left .2em
            white-space no-wrap
        span:first-child
            margin-left 0
        .title
            order 1
            &:before
                content open-quote
            &:after
                content close-quote

        .publishedAt
            order 2
            &:before
                content: "published on "
        .channel
            order 3
            &:before
                content: "by "
        .license
            order 4
            &:before
                content: "license: "

    .menu
        ul
            padding 0 0

        ul.tracks
            list-style none
            display flex
            justify-content space-between
            
            &>li
                padding 0
                width: calc(33% - 1em)
                h1
                    font-size: 1.6em
                    padding .2em

            ul.choices
                list-style none
                button
                    background-color inherit
                    font-size inherit

                li.choice // enabled
                    .description
                        display inline
                    ul.requires
                        display: none
                    margin-bottom .4em
                    button
                        color inherit 
                        text-decoration: none
                    ul.provides
                        display none

                li.choice[data-disabled]
                    button
                        cursor: default
                    .description
                        display none
                    ul.requires
                        &::before
                            content "(requires knowledge you don't have yet: "
                        &::after
                            content ")"
                        display inline
                        li
                            display inline
                            &:not(:last-child)::after
                                content: ", "
.sidebar
    position: fixed
    top: 4em
    width: SIDEBAR_WIDTH

.inventory
    ul
        display flex
        flex-wrap wrap
        padding  0
        list-style none

        li
            margin 0.15em
            padding 0
            border-radius 4px
            span
                padding 0.01em 0.3em
            i
                padding 4px 2px
                border-top-left-radius 4px
                border-bottom-left-radius 4px
.history   
    ul
        padding-left 0em

    li
        list-style: none
        cursor: pointer

        i
            padding-right .4em
            opacity: 0

        &.current i
            opacity: 1
            
            
.topbar
    z-index 10
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 3em
    align-items center
    display flex
    flex-direction row
    justify-content flex-start

    span
        margin: 0em .2em 

.content
    margin-top: 3em

button
    display: inline-block
    padding: .5em
    margin-top: .5em
    margin-right: .5em
    border none
    cursor: pointer
